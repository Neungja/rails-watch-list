<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>My Lists</h2>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
</div>
<div class="row">
  <% if @lists %>
    <% @lists.each do |list| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 border border-2 rounded-3 shadow">
          <div class="card-img-container" style="height: 200px; overflow: hidden;">
            <img src="https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                class="card-img-top"
                alt="<%= list.name %>"
                style="object-fit: cover; height: 100%; width: 100%;">
          </div>
          <div class="card-img-overlay d-flex align-items-end">
            <h5 class="card-title text-white bg-dark bg-opacity-75 p-2 rounded-3"><%= list.name %> Movies</h5>
          </div>
        </div>
      </div>
    <%end %>
  <%end %>
</div>
</div>
