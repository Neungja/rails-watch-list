<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>My Lists</h2>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
</div>
<div class="container mt-4">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6 mb-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card h-100 shadow-sm">
            <% if list.photo.attached? %>
              <%= cl_image_tag(list.photo.key, class: "card-img-top", alt: list.name, style: "height: 200px; object-fit: cover;") %>
            <% else %>
              <%= image_tag 'https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80',
                        class: "card-img-top",
                        alt: list.name,
                        style: "height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark">
                <%= list.name %>
              </h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
